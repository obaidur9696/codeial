<link rel="stylesheet" href="/css/profile.css">
<h1>
    <%=title%>
</h1>

<img src="<%=userdata.avatar%>" alt="<%=userdata.name%>" width="100" id="profile-img">


<%if(locals.user.id==userdata.id){%>
    <!-- if log in user matches with profile user the we will show update form  -->
    <p>
        <%=userdata.name%>
    </p>

    <form action="/users/update/<%=userdata.id%>" enctype="multipart/form-data" method="post">
        <input type="text" name="name" placeholder="Your name" value="<%=userdata.name%>" required>
        <input type="email" name="email" placeholder="your email" value="<%=userdata.email  %> " required>
        <input type="file" name="avatar" placeholder="Profile picture">
        <input type="submit" value="Update">
    </form>

    <%}else{%>
        <!-- else only show the profile info. -->
        <p>
            <%=userdata.name%>
        </p>
        <p>
            <%=userdata.email%>
        </p>
        <%}%>